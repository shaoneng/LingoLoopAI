# Cloudflare Pages (frontend)
NEXT_PUBLIC_APP_BASE_URL=https://app.example.com
NEXT_PUBLIC_API_BASE=https://api.example.com
NEXT_PUBLIC_GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
# Optional Supabase helpers if you consume their Auth/Storage directly
NEXT_PUBLIC_SUPABASE_URL=https://project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=supabase-public-anon-key
SUPABASE_SERVICE_ROLE_KEY=supabase-service-role-key

# Cloudflare Workers (API + Queue consumer)
AUTH_JWT_SECRET=change-me-to-a-long-random-string
PRISMA_ACCELERATE_URL=prisma://accelerate-token
# Prisma runtime connection (use Supabase pooling in production)
DATABASE_URL=postgresql://user:password@host:5432/lingoloop
# Prisma CLI / migrations connection (required for Supabase)
DIRECT_URL=postgresql://user:password@host:5432/lingoloop
# Example Supabase production values:
# DATABASE_URL=postgresql://postgres:password@db.project.supabase.co:6543/postgres?pgbouncer=true&connection_limit=1&pool_timeout=60&sslmode=require
# DIRECT_URL=postgresql://postgres:password@aws-0-project.supabase.co:5432/postgres?sslmode=require
# SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOi... (find under Supabase → Settings → API → service_role)
GCS_BUCKET=your-gcs-bucket
GCLOUD_PROJECT=your-gcp-project-id
GCP_CLIENT_EMAIL=service-account@example.iam.gserviceaccount.com
GCP_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----"
GEMINI_API_KEY=your-gemini-api-key
CORS_ORIGIN=https://app.example.com
SPEECH_LOCATION=global

# Email (optional)
MAIL_FROM=no-reply@example.com
SENDGRID_API_KEY=your-sendgrid-api-key
MAIL_FALLBACK_MODE=console

# Upload quotas (optional overrides; see lib/quota.js)
UPLOAD_URL_TTL_SEC=3600
QUOTA_PER_FILE_SIZE_BYTES=104857600
QUOTA_PER_FILE_DURATION_MS=1800000
QUOTA_DAILY_UPLOAD_LIMIT=10
QUOTA_DAILY_DURATION_LIMIT_MS=7200000

# Queue retry (worker)
TASKS_MAX_ATTEMPTS=3
TASKS_RETRY_SCHEDULE_MS=5000,30000,120000

# OAuth (optional server-side)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
